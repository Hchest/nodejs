extends ../layout

block content
  .container
  	.row
  	  each item in movies
  		.col-md-7
  		  embed(src="#{movie.flash}", allowFullScreen="true", quality="high", width="720", height="600", align="middle", type="applicaton/x-shockwave-flash")
  		.col-md-5
  		  dl.dl-horizontal
  		  	dt 电影名字
  		  	dd= movie.title
  		  	dt 导演
  		  	dd= movie.doctor
  		  	dt 国家
  		  	dd= movie.country
  		  	dt 语言
  		  	dt= movie.language
  		  	dd 上映年份
  		  	dt= movie.year
  		  	dd 简介
  		  	dd= movie.summary